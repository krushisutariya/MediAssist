                                        <option value="O-" <%=(user.blood_group === 'O-') ? 'selected' : '' %>>O-</option>
                                        <option value="AB+" <%=(user.blood_group === 'AB+') ? 'selected' : '' %>>AB+</option>
                                        <option value="AB-" <%=(user.blood_group === 'AB-') ? 'selected' : '' %>>AB-</option>
                                    </select>
                                </div>                                
