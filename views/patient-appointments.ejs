<link rel="stylesheet" type="text/css" href="/css/view-appointments.css">
<div class="mt-3">&nbsp;</div>
<div class="mt-3">&nbsp;</div>

<div class="container text-center" style="overflow-x: hidden;">
    <h2 class="text-success"><u>UPCOMING APPOINTMENTS</u></h2>
    <div class="row d-flex justify-content-around" style="overflow-y:hidden;">
        <% upcoming_appointments.forEach((element)=> { %>
            <div class="col-lg-3 col-md-4 col-sm-6 myViewBlock m-2">
                <div class="card border-secondary mb-3 mt-4">
                    <div class="card-header">
                        <%= element.date %>
                    </div>
                    <div class="card-body text-secondary">
                        <div class="card-text">ID: <%= element.id %>
                        </div>
                        <h5 class="card-title">Slot:</h5>
                        <div class="card-text">Start time: <%= element.start_time %>
                        </div>
                        <div class="card-text">End time: <%= element.end_time %>
                        </div>
                    </div>
                    <div class="text-center m-4">
                        <a href="/users/appointment/cancel-appointment/<%=element.id%>" type="button" class="btn btn-danger">Delete Slot</a>
                    </div>
                </div>
            </div>
            <% }); %>
    </div>
</div>

<div class="container text-center" style="overflow-x: hidden;">
    <h2 class="text-success"><u>PAST APPOINTMENTS</u></h2>
    <div class="row d-flex justify-content-around" style="overflow-y:hidden;">
        <% past_appointments.forEach((element)=> { %>
            <div class="col-lg-3 col-md-4 col-sm-6 myViewBlock m-2">
                <div class="card border-secondary mb-3 mt-4">
                    <div class="card-header">
                        <%= element.date %>
                    </div>
                    <div class="card-body text-secondary">
                        <div class="card-text">ID: <%= element.id %></div>
                        <h5 class="card-title">Slot:</h5>
                        <div class="card-text">Start time: <%= element.start_time %></div>
                        <div class="card-text">End time: <%= element.end_time %></div>
                        <div class="card-text" style="font-weight: 700;">Prescription:</div>
                        <div class="card-text"><%= element.prescription %></div>
                    </div>
                </div>
            </div>
            <% }); %>
    </div>
</div>