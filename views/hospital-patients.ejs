<title><%=title%></title>
<link rel="stylesheet" href="/css/stocks.css" />

<section class="intro">
  <div class="mask d-flex align-items-center h-100">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-12">
          <div class="card">
            <div class="card-body p-0">
              <table class="table table-striped mb-0">
                <thead class="text-center">
                  <tr>
                    <th scope="col" class="bg-success text-light">ID</th>
                    <th scope="col" class="bg-success text-light">
                      Patient Name
                    </th>
                    <th scope="col" class="bg-success text-light">
                      Patient Email
                    </th>
                    <th scope="col" class="bg-success text-light">Contact</th>
                    <th scope="col" class="bg-success text-light">Doctor Consulted</th>
                    <th scope="col" class="bg-success text-light">Date</th>
                    <th scope="col" class="bg-success text-light">Start Time</th>
                    <th scope="col" class="bg-success text-light">End Time`</th>

                  </tr>
                </thead>
                <tbody class="text-center">
                  <% let index = 1; %> <%patients.forEach((patient) => {%>
                  <tr>
                    <td><%=patient.id%></td>
                    <td><%=patient.name%></td>
                    <td><%=patient.email%></td>
                    <td><%=patient.contact%></td>
                    <td><%=patient.doc_email%></td>
                    <td><%=patient.date%></td>
                    <td><%=patient.start_time%></td>
                    <td><%=patient.end_time%></td>
                  </tr>
                  <% index = index + 1%> <%});%>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
