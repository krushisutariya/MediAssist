<link rel="stylesheet" type="text/css" href="/css/view-appointments.css">
<div class="mt-3">&nbsp;</div>
<div class="mt-3">&nbsp;</div>

<div class="container text-center" style="overflow-x: hidden;">
    <div class="row d-flex justify-content-around" style="overflow-y:hidden;">
        <% appointments.forEach((element)=> { %>
            <div class="col-lg-3 col-md-4 col-sm-6 myViewBlock m-2">
                <div class="card border-secondary mb-3 mt-4">
                    <div class="card-header">
                        <%= element.date %>
                    </div>
                    <div class="card-body text-secondary">
                        <a href="/users/doctor/appointment/<%=element.id%>" class="text-primary" style="text-decoration: none; cursor: pointer;">
                            <div class="card-text">Appointment ID: <%= element.id %></div>
                        </a>
                        <div class="card-text" style="margin-bottom: 5px;">Patient: <%= element.patient_email %></div>
                        
                        <h5 class="card-title">Slot:</h5>
                        <div class="card-text">Start time: <%= element.start_time %></div>
                        <div class="card-text">End time: <%= element.end_time %></div>
                    </div>
                    <% if(element.is_pending === '0'){ %>
                        <h5 class="card-title">Prescription</h5>
                        <div class="card-text"><%= element.prescription %></div>
                    <% } %>
                </div>
            </div>
            <% }); %>
    </div>
</div>