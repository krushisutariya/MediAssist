<link rel="stylesheet" href="/css/stocks.css">

<section class="intro">
      <div class="mask d-flex align-items-center h-100">
        <div class="container">
          <div class="row justify-content-center">
            <div class="col-12">
              <div class="card">
                <div class="card-body p-0">
                    <table class="table table-striped mb-0">
                      <thead class="text-center">
                        <tr>
                          <th scope="col" class="bg-success text-light">Index</th>
                          <th scope="col" class="bg-success text-light">Name</th>
                          <th scope="col" class="bg-success text-light">Specialization</th>
                          <th scope="col" class="bg-success text-light">Total Beds</th>
                          <th scope="col" class="bg-success text-light">Total Staff</th>
                        </tr>
                      </thead>
                      <tbody class="text-center">
                        <% let index = 1; %>
                        <%hospitals.forEach((hospital) => {%>
                            <tr>
                                <td><%=index%></td>
                                <td><%=hospital.name%></td>
                                <td><%=hospital.specialization%></td>
                                <td><%=hospital.total_beds%></td>
                                <td><%=hospital.total_staff%></td>
                            </tr>
                            <% index = index + 1
                        });%>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
        </div>
    </div>
  </section>